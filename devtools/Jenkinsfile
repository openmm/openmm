pipeline {
    agent any

    stages {
        stage("Build and test") {
            parallel {
                stage("Build and test GPU platforms") {
                    agent { label "cuda" }
                    steps {
                        sh '''#!/bin/bash -lex
                            env && \
                            module load cuda && \
                            bash -e devtools/ci/jenkins/install.sh && \
                            bash -e devtools/ci/jenkins/test.sh -R 'Test(Cuda|OpenCL) --parallel 2'
                        '''
                    }
                }

                stage("Build/test CPU platforms") {
                    agent {
                        dockerfile {
                            dir "devtools/ci/jenkins"
                            label "linux"
                        }
                    }

                    steps {
                        sh '''#!/bin/bash -lex
                            bash -e devtools/ci/jenkins/install.sh \
                                    -DOPENMM_BUILD_CUDA_LIB=false \
                                    -DOPENMM_BUILD_OPENCL_LIB=false && \
                            bash -e devtools/ci/jenkins/test.sh -R 'Test(Cpu|Reference) --parallel 4'
                            sudo make PythonInstall
                            bash -e devtools/ci/jenkins/test_python.sh
                        '''
                    }
                }
            } // parallel
        }
    }
}
